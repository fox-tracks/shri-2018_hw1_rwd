{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": [2, {"ignore": ["inside-parens"]}],
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "include",
        "ignores",
        "mixin",
        "extend"
      ]
    }],
    "number-leading-zero": null,
    "number-no-trailing-zeros": null
  }
}
